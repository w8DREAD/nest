<h2 class="title">{{news}}</h2>
    {{#notes}}

        <form class="articles-news" name="news" id="post-{{id}}">
            <div style="margin-top: 15px">
                <p>
                    {{#if root}}
                    <button type="submit" class="close button notes" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true" id="delete-notes-{{id}}" name={{id}}>&times;</span>
                    </button>
                    {{/if}}
                    <br>
                    <div>
                    {{#if root}}
                <button type="submit" class="like edit tag button" style="margin-right: 5px" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true" id="edit-tag-{{id}}" name={{id}}>&nbsp✎</span>
                </button>
                    {{/if}}
                <a id="tag-{{id}}" href="">{{tag}}</a>
                    </div>

                </p>

            </div>
            {{#if root}}
            <button type="submit" class="like edit text button" style="margin-right: 5px" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true" id="edit-text-{{id}}" name={{id}}>&nbsp✎</span>
            </button>
            {{/if}}
            <a style="margin: 15px 0 15px 0" id="note-{{id}}">
                    {{text}}
            </a>
            <div style="margin: 15px 0 15px 0" id="info-note-{{id}}">
                Автор: {{author}} <br> Опубликовано: {{date}}
            </div>


        <div class="collapse" id="collapseExample-{{id}}">
            {{#comments}}
            <div class="articles-news comments">
               {{text}}<br>
            {{#if root}}
                <button type="submit" class="close button comment" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true" id="delete-comment-{{id}}" name={{id}}>&times;</span>
                </button>
            {{/if}}
                <br>
                <span aria-hidden="true" style="float: left; margin-top: 10px">Комментарий от: {{author}}</span>
            </div>
            {{/comments}}
            {{#if ../login}}
            <div class="input-group add-notes" id="add-notes-{{id}}">

                <div class="input-group-prepend">
                    <button class="input-group-text add-comments" type="button" name="{{id}}">Добавить</button>
                </div>
                <div type="tags" class="form-control" id="inputComment-{{id}}" placeholder="напиши комментарий" contenteditable="true"></div>
            </div>
            {{/if}}
        </div>

            <div style="margin-top: 5px">
                    <span class="like" type="button" style="color: red" name="{{id}}">&heartsuit; <p style="float: right; margin-left: 5px" name={{id}}>{{likes}}</p></span>
            <a data-toggle="collapse" href="#collapseExample-{{id}}" role="button" aria-expanded="false"
               aria-controls="collapseExample-{{id}}" style="font-size: 14px; float: right; padding-top: 10px; margin-right: 15px">
                комментарии
            </a>
            </div>
        </form>
    {{/notes}}
